<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
    android:layout_width="fill_parent" android:layout_height="fill_parent"  android:padding="20dip"
    android:background="@drawable/fondo">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Login"
        android:id="@+id/lblInicio"
        android:layout_gravity="center_horizontal"
        android:textSize="40dp"
        android:textColor="#04B486"
        android:textStyle="bold"

        />

    <EditText android:id="@+id/txtUsuario"
        android:layout_height="wrap_content"
        android:layout_width="218dp"
        android:hint="Usuario"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="60dp" />

    <EditText android:id="@+id/txtContraseÃ±a"
        android:layout_height="wrap_content"
        android:layout_width="218dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dip"
        android:layout_marginLeft="60dp" />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/entrar"
        android:background="#00ffffff"
        android:onClick="Enviar"
        android:layout_marginTop="30dp" />

    <TextView android:id="@+id/IraRegistro"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="40dip"
        android:text="registrate!"
        android:gravity="center"
        android:textSize="20dip"
        android:textColor="#0b84aa"
        android:onClick="Registro"
        />

    <TextView android:id="@+id/login_error"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dip"
        android:layout_marginBottom="40dip"
        android:gravity="center"
        android:textSize="20dip"
        android:textColor="#0b84aa"/>
</LinearLayout>